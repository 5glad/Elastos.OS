
module
{
    interface Elastos.Droid.Os.IMessage;

    using interface Elastos.Utility.IArrayList;

    namespace Elastos {
    namespace Droid {
    namespace Internal {
    namespace Telephony {

    /**
     * @Involve
     * interface IHandler
     */
    interface ITelephonyDevController {
        GetModem(
            [in] Int32 index,
            [out] IHardwareConfig** result);

        GetSimCount(
            [out] Int32* result);

        GetSim(
            [in] Int32 index,
            [out] IHardwareConfig** result);

        GetModemForSim(
            [in] Int32 simIndex,
            [out] IHardwareConfig** result);

        GetAllSimsForModem(
            [in] Int32 modemIndex,
            [out] IArrayList** result);

        GetAllModems(
            [out] IArrayList** result);

        GetAllSims(
            [out] IArrayList** result);

    }

    [local]
    interface ITelephonyDevControllerHelper {
        Create(
            [out] ITelephonyDevController** result);

        GetInstance(
            [out] ITelephonyDevController** result);

        RegisterRIL(
            [in] ICommandsInterface* cmdsIf);

        UnregisterRIL(
            [in] ICommandsInterface* cmdsIf);

        GetModemCount(
            [out] Int32* result);
    }

    }//Telephony
    }//Internal
    }//Droid
    }//Elastos

}
