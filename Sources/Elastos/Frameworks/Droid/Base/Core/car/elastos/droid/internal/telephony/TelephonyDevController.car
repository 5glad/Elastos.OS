
module {

    namespace Elastos {
    namespace Droid {
    namespace Internal {
    namespace Telephony {

    interface ITelephonyDevController {
        Create(
            [out] TelephonyDevController* result);

        GetInstance(
            [out] TelephonyDevController* result);

        RegisterRIL(
            [in] CommandsInterface cmdsIf);

        UnregisterRIL(
            [in] CommandsInterface cmdsIf);

        HandleMessage(
            [in] Message msg);

        GetModemCount(
            [out] Int32* result);

        GetModem(
            [in] Int32 index,
            [out] HardwareConfig* result);

        GetSimCount(
            [out] Int32* result);

        GetSim(
            [in] Int32 index,
            [out] HardwareConfig* result);

        GetModemForSim(
            [in] Int32 simIndex,
            [out] HardwareConfig* result);

        GetAllSimsForModem(
            [in] Int32 modemIndex);

        GetAllModems();

        GetAllSims();

    }

    }//Telephony
    }//Internal
    }//Droid
    }//Elastos

}
