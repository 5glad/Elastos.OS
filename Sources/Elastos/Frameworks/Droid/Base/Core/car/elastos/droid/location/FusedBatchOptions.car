module
{
    namespace Elastos {
    namespace Droid {
    namespace Location {

    /**
     * A data class representing a set of options to configure batching sessions.
     * @hide
     */
    /**
     * @Involve interface IParcelable
     */

    interface IFusedBatchOptions {
        /*
         * Getters and setters for properties needed to hold the options.
         */
        SetMaxPowerAllocationInMW(
            [in] Double value);

        GetMaxPowerAllocationInMW(
            [out] Double* result);

        SetPeriodInNS(
            [in] Int64 value);

        GetPeriodInNS(
            [out] Int64* result);

        SetSourceToUse(
            [in] Int32 source);

        ResetSourceToUse(
            [in] Int32 source);

        IsSourceToUseSet(
            [in] Int32 source,
            [out] Boolean* result);

        GetSourcesToUse(
            [out] Int32* result);

        SetFlag(
            [in] Int32 flag);

        ResetFlag(
            [in] Int32 flag);

        IsFlagSet(
            [in] Int32 flag,
            [out] Boolean* result);

        GetFlags(
            [out] Int32* result);
    }

    } // namespace Location
    } // namespace Droid
    } // namespace Elastos
}

