<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/statusBarNotificationButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="StatusBar Notification" />
        <Button
            android:id="@+id/startNotificationButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Start Notification" />
        <Button
            android:id="@+id/updateNotificationButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Update Notification" />
        <Button
            android:id="@+id/cancelNotificationButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Cancel Notification" />

     </LinearLayout>

</LinearLayout>
