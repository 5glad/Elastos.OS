module
{
    namespace Elastos {
    namespace Droid {
    namespace Phone {

    interface IPhoneEditPinPreference;

    interface IEditPinPreferenceOnPinEnteredListener {
        OnPinEntered(
            [in] IPhoneEditPinPreference* preference,
            [in] Boolean positiveResult);
    }

    /**
     * Class similar to the com.android.settings.EditPinPreference
     * class, with a couple of modifications, including a different layout
     * for the dialog.
     */
    interface IPhoneEditPinPreference {
        SetOnPinEnteredListener(
            [in] IEditPinPreferenceOnPinEnteredListener* listener);

        /**
         * Externally visible method to bring up the dialog to
         * for multi-step / multi-dialog requests (like changing
         * the SIM pin).
         */
        ShowPinDialog();
    }

    } // namespace Phone
    } // namespace Droid
    } // namespace Elastos
}
