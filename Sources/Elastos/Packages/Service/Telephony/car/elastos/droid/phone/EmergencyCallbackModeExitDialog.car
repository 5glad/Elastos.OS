module
{
    namespace Elastos {
    namespace Droid {
    namespace TeleService {
    namespace Phone {

    /**
     * Displays dialog that enables users to exit Emergency Callback Mode
     *
     * @see EmergencyCallbackModeService
     */
    interface IEmergencyCallbackModeExitDialog {
        /** Intent to trigger the Emergency Callback Mode exit dialog */
        const String ACTION_SHOW_ECM_EXIT_DIALOG =
                "com.android.phone.action.ACTION_SHOW_ECM_EXIT_DIALOG";
        /** Used to get the users choice from the return Intent's extra */
        const String EXTRA_EXIT_ECM_RESULT = "exit_ecm_result";

        const Int32 EXIT_ECM_BLOCK_OTHERS = 1;
        const Int32 EXIT_ECM_DIALOG = 2;
        const Int32 EXIT_ECM_PROGRESS_DIALOG = 3;
        const Int32 EXIT_ECM_IN_EMERGENCY_CALL_DIALOG = 4;
    }

    } // namespace Phone
    } // namespace TeleService
    } // namespace Droid
    } // namespace Elastos
}
