module
{
    namespace Elastos {
    namespace Droid {
    namespace Telephony {
    namespace Phone {

    interface IBluetoothManagerBluetoothIndicatorListener {
        OnBluetoothIndicationChange(
            [in] Boolean isConnected,
            [in] IBluetoothManager* manager);
    }

    interface IBluetoothManager {
        IsBluetoothHeadsetAudioOn(
            [out] Boolean* result);

        IsBluetoothAvailable(
            [out] Boolean* result);

        IsBluetoothAudioConnected(
            [out] Boolean* result);

        IsBluetoothAudioConnectedOrPending(
            [out] Boolean* result);

        ShowBluetoothIndication(
            [out] Boolean* result);

        UpdateBluetoothIndication();

        AddBluetoothIndicatorListener(
            [in] IBluetoothManagerBluetoothIndicatorListener* listener);

        RemoveBluetoothIndicatorListener(
            [in] IBluetoothManagerBluetoothIndicatorListener* listener);

        ConnectBluetoothAudio();

        DisconnectBluetoothAudio();
    }

    } // namespace Phone
    } // namespace Telephony
    } // namespace Droid
    } // namespace Elastos
}
